<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardMaxElevation="7dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/main"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thumb"
                android:background="@color/black_alpha_208" />
            <net.qiujuer.genius.ui.widget.Loading
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:gBackgroundLineSize="1dp"
                app:gForegroundLineSize="3dp"
                app:gBackgroundColor="@color/md_light_green_900"
                app:gForegroundColor="@color/colorAccent"
                android:id="@+id/loading"
                android:layout_gravity="center_horizontal"
                app:gProgressFloat="0.65"
                app:gAutoRun="false"/>
            <TextView
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cctv_location"
                android:text="Lokasi Jalana anu"
                />
            <net.qiujuer.genius.ui.widget.Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gTouchColor="@color/foregroundLoading"
                app:gTouchEffect="ripple"
                android:text="Lihat Video"
                android:padding="15dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_accent_bold_round"
                android:id="@+id/watch_btn"
                app:gTouchCornerRadius="12dp"
                app:gTouchCornerRadiusTL="6dp"
                app:gTouchCornerRadiusTR="6dp"
                app:gTouchCornerRadiusBL="6dp"
                app:gTouchCornerRadiusBR="6dp"
                app:gTouchDurationRate="0.7"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>