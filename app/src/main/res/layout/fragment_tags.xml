<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.bsts.semut.fragments.map.TagsFragment"
    android:background="@drawable/bg_white_rounded_transparent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tambah Tag"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_black_top_rounded"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:gravity="center|center_horizontal" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/closeButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/btn_close_menu"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:background="#00ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00ffffff">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true"
                android:layout_gravity="center"
                android:background="#00ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn1"
                        android:src="@drawable/menu_post_02"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Polisi"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn2"
                        android:src="@drawable/menu_post_03"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Kecelakaan"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn3"
                        android:src="@drawable/menu_post_04"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Bencana Alam"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn4"
                        android:src="@drawable/menu_post_05"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Penutupan Jalan"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn5"
                        android:src="@drawable/menu_post_06"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Lain-lain"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn0"
                        android:src="@drawable/menu_post_01"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Lalu Lintas"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    >

                    <ImageButton
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/btn6"
                        android:src="@drawable/menu_post_01"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_level_0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:text="Angkutan Umum"
                        android:textAllCaps="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#00ffffff"
                        android:textSize="12dp"
                        android:textColor="@color/primary_dark" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>